{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": "./packages",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@tanggram-ui/react-core": ["./tanggram-react-core/src"],
      "@tanggram-ui/icons": ["./tanggram-react-icons/src/*"]
    }
  },
  "exclude": [
    "**/build/"
  ]
}